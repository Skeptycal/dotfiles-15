" Enable incremental search
set incsearch

" Turn on syntax highlighting
syntax on

" Turn on line numbers
set number
:highlight LineNr ctermfg=242

" Turn on line highlighting and change the cursor color
set cursorline
hi CursorLine ctermbg=236 cterm=NONE

" Set tabs settings
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
